-- Side UI Box
local sideUI = Instance.new("Frame")
sideUI.Size = UDim2.new(0.25, 0, 0.5, 0)
sideUI.Position = UDim2.new(0.02, 0, 0.25, 0)
sideUI.BackgroundColor3 = Color3.fromRGB(30, 0, 0)
sideUI.BackgroundTransparency = 0.2
sideUI.BorderSizePixel = 2
sideUI.BorderColor3 = Color3.fromRGB(255, 50, 0)
sideUI.Parent = bg
sideUI.ZIndex = 2

-- Title
local sideTitle = Instance.new("TextLabel")
sideTitle.Size = UDim2.new(1, 0, 0.15, 0)
sideTitle.BackgroundTransparency = 1
sideTitle.Text = "üî• Options üî•"
sideTitle.Font = Enum.Font.GothamBold
sideTitle.TextScaled = true
sideTitle.TextColor3 = Color3.fromRGB(255, 80, 0)
sideTitle.TextStrokeTransparency = 0.7
sideTitle.Parent = sideUI

-- Helper function for buttons
local function createButton(text, emoji, posY)
	local button = Instance.new("TextButton")
	button.Size = UDim2.new(0.9, 0, 0.15, 0)
	button.Position = UDim2.new(0.05, 0, posY, 0)
	button.BackgroundColor3 = Color3.fromRGB(50, 0, 0)
	button.TextColor3 = Color3.new(1, 1, 1)
	button.TextScaled = true
	button.TextStrokeTransparency = 0.7
	button.TextStrokeColor3 = Color3.fromRGB(255, 80, 0)
	button.Font = Enum.Font.GothamBold
	button.Text = emoji .. " " .. text
	button.Parent = sideUI
	return button
end

-- Buttons
local btnEggRandomizer = createButton("Egg Randomizer", "üé≤", 0.2)
local btnPetRandomizer = createButton("Randomize Pets", "üé≤", 0.38)
local btnESP = createButton("ESP: OFF", "üëÅÔ∏è", 0.56)
local btnAutoRandom = createButton("Auto Randomize: OFF", "üîÑ", 0.74)

-- Functionality Toggles
local espOn = false
local autoOn = false

btnESP.MouseButton1Click:Connect(function()
	espOn = not espOn
	btnESP.Text = "üëÅÔ∏è ESP: " .. (espOn and "ON" or "OFF")
end)

btnAutoRandom.MouseButton1Click:Connect(function()
	autoOn = not autoOn
	btnAutoRandom.Text = "üîÑ Auto Randomize: " .. (autoOn and "ON" or "OFF")
end)

btnEggRandomizer.MouseButton1Click:Connect(function()
	print("Egg Randomizer Clicked!") -- Replace with your actual function
end)

btnPetRandomizer.MouseButton1Click:Connect(function()
	print("Randomize Pets Clicked!") -- Replace with your actual function
end)
